{% extends 'base.html.twig' %}

{% block title %}Modifier les données{% endblock %}

{% block body %}
    <h1 class="title margin-b">Modifier les données </h1> 

    <!--==== Formulaire ====-->
    <div class="card card-padding">

        {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary btn-radius">
                {{ button_label|default('Mettre à jour!') }}
            </button>
            <a href="{{ path('data_index') }}" class="btn btn-third btn-radius">Retour</a>
        {{ form_end(form) }}

    </div>
{% endblock %}
