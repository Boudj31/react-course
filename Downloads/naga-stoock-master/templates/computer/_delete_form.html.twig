<form method="post" action="{{ path('computer_delete', {'id': computer.id}) }}" onsubmit="return confirm('Le matériel {{computer.serial}} va être supprimée pour de bon. Êtes-vous sûr ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ computer.id) }}">
    <button data-infoBulle="{{'btn.tooltip.delete'| trans}}"> <i class="far fa-trash-alt"></i> </button>
</form>
