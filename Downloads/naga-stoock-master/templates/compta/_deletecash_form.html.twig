<form method="post" action="{{ path('cash_delete', {'id': cash.id}) }}" onsubmit="return confirm('Le dernier dépot va être supprimée pour de bon. Êtes-vous sûr ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cash.id) }}">
    <button data-infoBulle="Supprimer"> <i class="far fa-trash-alt"></i> </button>
</form>
