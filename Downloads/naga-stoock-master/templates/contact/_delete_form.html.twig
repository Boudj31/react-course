<form method="post" action="{{ path('contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('Le contact {{contact.lastname ~ ' ' ~contact.firstname}} va être supprimée pour de bon. Êtes-vous sûr ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button data-infoBulle="{{'btn.tooltip.delete'| trans}}"><i class="far fa-trash-alt"></i></button>
</form>
